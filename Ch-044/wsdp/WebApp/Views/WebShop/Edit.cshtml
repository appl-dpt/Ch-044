@model Model.DTO.WebShopDTO

@{
    ViewBag.Title = "Edit";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="col-md-12">
        <form action="/WebShop/Edit" class="form-horizontal" method="post" enctype="multipart/form-data">
            <fieldset>
                @Html.AntiForgeryToken()
                <!-- Form Name -->
                <legend>@Resources.Resource.Edit</legend>
                @Html.HiddenFor(model => model.Id)
                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="textinput">@Resources.Resource.Name</label>
                    <div class="col-md-4">
                        <input id="textinput" name="Name" type="text" value="@Model.Name" placeholder="placeholder" class="form-control input-md">
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="textinput">Url</label>
                    <div class="col-md-4">
                        <input id="textinput" name="Path" type="text" value="@Model.Path" placeholder="placeholder" class="form-control input-md">
                        @Html.ValidationMessageFor(model => model.Path, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- File Button -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="filebutton">@Resources.Resource.Logo</label>
                    <div class="col-md-4">
                        <input type="file" value="@Model.LogoPath" id="filebutton" name="upload" multiple accept="image/*,image/jpeg" class="imgInput">
                        @Html.ValidationMessageFor(model => model.LogoPath, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Button -->
                <div class="form-group">
                    <div class="col-md-4"></div>
                    <div class="col-md-4">
                        @*<button id="singlebutton" type="submit" class="btn btn-primary">Button</button>*@
                        <input type="submit" value="@Resources.Resource.SAVE" class="btn btn-success" />
                        <a href="@Url.Action("Index")" class="btn btn-default btn-md">
                            <span></span> @Resources.Resource.Cancel
                        </a>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>